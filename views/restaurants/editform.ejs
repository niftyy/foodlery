<% include ../partials/header %>
  <div class="container content">
    <h1><%=currentUser.name%></h1>
    <h3>Your Menu</h3>
    <ul>
      <% restaurant.menu.forEach((dish) => { %>
        <li> <%= dish.name %> - <strong> <%= dish.price%> INR.</strong></li>
      <% }); %>
    </ul>
    <h4>Add more dishes</h4>
    <div class="container">
      <div class="page-wrap container">
          <% include ../partials/messages %>
          <form action="/restaurants/<%= restaurant._id %>/menu/add" method="POST">
              <div class="form-group">
                  <label for="name">Name</label>
                  <input  id="name" class="form-control" type="text" name="dish[name]" placeholder="Name">
              </div>
              <div class="form-group">
                  <label for="price">Price</label>
                  <input id="price" class="form-control" type="text" name="dish[price]" placeholder="Price">
              </div>
              <div class="form-group">
                  <label for="img">Image</label>
                  <input id="img" class="form-control" type="text" name="dish[img]" placeholder="Image Link">
              </div>
              <br>
              <button class="btn btn-success" type="submit">Submit</button>
          </form>
      </div>
    </div>
  </div>
<% include ../partials/footer %>
